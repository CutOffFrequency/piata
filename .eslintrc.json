{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeaturs": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "eqeqeq": "off",
        "curly": "warn",
        "quotes": ["warn", "double"],
        "no-console": "warn",
        "no-unused-vars": "warn"
    },
    "globals": {
        "jQuery": true,
        "$": true
    }
}